{
    "compilerOptions": {
        "esModuleInterop": true,
        "skipLibCheck": true,
        "target": "ES2022",
        "allowJs": true,
        "resolveJsonModule": true,
        "moduleDetection": "force",
        "isolatedModules": true,
        "verbatimModuleSyntax": true,

        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitOverride": true,

        "module": "NodeNext",
        "declaration": true,
        "noEmit": true,

        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}